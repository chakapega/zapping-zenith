---
interface Props {
  images: string[];
}

const { images } = Astro.props;
---

<div class="fade-container" id="fade-slider">
  {images.slice(0, 3).map((src, index) => (
    <div class={`fade-slide ${index === 0 ? 'active' : ''}`}>
      <img src={src} alt={`Background ${index + 1}`} />
    </div>
  ))}
</div>

<style>
  .fade-container {
    display: flex;
    width: 100%;
    height: 500px;
    position: relative;
    overflow: hidden;
  }

  .fade-container:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.15);
  }

  .fade-slide {
    flex: 0 0 33.333%;
    height: 100%;
    transition: opacity 1s ease-in-out;
  }

  .fade-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 1024px) {
    .fade-slide {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      z-index: 0;
    }

    .fade-slide.active {
      opacity: 1;
      z-index: 1;
    }
  }
</style>

<script>
  const initFadeSlider = () => {
    const slider = document.getElementById('fade-slider');
    if (!slider || window.innerWidth > 1024) return;

    const slides = slider.querySelectorAll('.fade-slide');
    let currentIndex = 0;

    setInterval(() => {
      slides[currentIndex].classList.remove('active');
      currentIndex = (currentIndex + 1) % slides.length;
      slides[currentIndex].classList.add('active');
    }, 5555);
  };


  initFadeSlider();
  document.addEventListener('astro:after-swap', initFadeSlider);
</script>
