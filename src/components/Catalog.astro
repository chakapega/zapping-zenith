---
import CatalogCard from "./CatalogCard.astro";
import type { CatalogItem } from "../data/catalog";
import SectionHeader from "./SectionHeader.astro";

export interface BreadcrumbItem {
  title: string;
  href?: string;
}

export interface Props {
  items: CatalogItem[];
  basePath?: string;
  breadcrumbs?: BreadcrumbItem[];
}

const { items, basePath = "/catalog", breadcrumbs = [] } = Astro.props;
---

<section class='catalog'>
  <SectionHeader title="Каталог продукции" subtitle="Надежные металлоконструкции для проектов любой сложности." />

  {
    breadcrumbs.length > 0 && (
      <nav class='catalog__breadcrumbs' aria-label='Хлебные крошки'>
        <ol class='catalog__breadcrumbs-list'>
          {breadcrumbs.map((crumb, i) => (
            <li class='catalog__breadcrumbs-item'>
              {i > 0 && (
                <span class='catalog__breadcrumbs-sep' aria-hidden='true'>
                  /
                </span>
              )}
              {crumb.href ? (
                <a class='catalog__breadcrumbs-link' href={`${import.meta.env.BASE_URL}${crumb.href}`}>
                  {crumb.title}
                </a>
              ) : (
                <span class='catalog__breadcrumbs-current' aria-current='page'>
                  {crumb.title}
                </span>
              )}
            </li>
          ))}
        </ol>
      </nav>
    )
  }
  <div class='catalog__grid'>
    {
      items.map((item) => {
        const hasChildren = item.products && item.products.length > 0;

        return (
          <CatalogCard item={item} href={hasChildren ? `${import.meta.env.BASE_URL}${basePath}/${item.slug}` : null} />
        );
      })
    }
  </div>
</section>

<style>
  .catalog {
    max-width: 1200px;
    margin: 60px auto 40px;
    padding: 0 20px;
  }

  .catalog__breadcrumbs {
    margin-bottom: 20px;
  }

  .catalog__breadcrumbs-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 4px 8px;
    margin: 0;
    padding: 0;
    list-style: none;
    font-size: 14px;
    color: var(--secondary-color);
  }

  .catalog__breadcrumbs-item {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .catalog__breadcrumbs-sep {
    color: var(--secondary-color);
    opacity: 0.7;
    user-select: none;
  }

  .catalog__breadcrumbs-link {
    color: var(--primary-color);
    text-decoration: none;
  }

  .catalog__breadcrumbs-link:hover {
    text-decoration: underline;
  }

  .catalog__breadcrumbs-current {
    color: var(--secondary-color);
    font-weight: 500;
  }

  .catalog__title {
    font-size: 42px;
    font-weight: 700;
    margin: 0 0 16px 0;
    line-height: 1.2;
    color: var(--primary-color);
  }

  .catalog__grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 24px;
  }

  @media (max-width: 1024px) {
    .catalog__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 640px) {
    .catalog {
      margin-top: 40px;
    }

    .catalog__grid {
      grid-template-columns: minmax(0, 1fr);
    }
  }
</style>
